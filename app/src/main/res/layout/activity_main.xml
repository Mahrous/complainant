<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bacground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اكتب شكوتك"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/text_title"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_title"
        android:hint="اكتب شكوتك"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textAlignment="center"
        android:background="@drawable/background_edit"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp"
        android:id="@+id/the_message"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/the_message"
        android:text="موقعك هو:"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/text_location"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_location"
        android:id="@+id/text_name"
        android:text="اسمك هــو:"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_name"
        android:text="رقـمـك هـو:"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/text_phone"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_phone"
        android:text="مـحـافـظـة:"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/text_contry"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />
    <TextView

        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_contry"
        android:text="الرقم القومي :"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/text_number_gov"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_number_gov">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/phone"
                android:src="@drawable/telephone"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="اتصال"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/message_phone"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/message_phone"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="رساله نصيه"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/whats_image"
                android:src="@drawable/whats"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="مع ارفاق صوره"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/whats_text"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/whats"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="رساله نصيه"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="9dp"
        android:layout_gravity="center"
        android:gravity="center">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/facebook"
            android:id="@+id/facebook_message"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="صفحه الفيس بوك"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

    </LinearLayout>


</LinearLayout>
    </ScrollView>
</RelativeLayout>